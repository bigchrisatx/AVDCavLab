{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",


  "variables": {
  },


  "resources": [
    {
      "name": "MMSAVDImageTemplate01",
      "type": "Microsoft.VirtualMachineImages/imageTemplates",
      "apiVersion": "2020-02-14",
      "location": "eastus",
      "dependsOn": [],
      "tags": {
        "imagebuilderTemplate": "AzureImageBuilderSIG",
        "userIdentity": "enabled"
      },
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "/subscriptions/cf2e8aee-9844-4d85-aa8e-c31b7776b800/resourcegroups/MMSAIBAVDRSG/providers/Microsoft.ManagedIdentity/userAssignedIdentities/aibIDMMS": {}

        }
      },

      "properties": {
        "buildTimeoutInMinutes": 120,

        "vmProfile": {
          "vmSize": "Standard_D2s_v3",
          "osDiskSizeGB": 127
        },

        "source": {
          "type": "PlatformImage",
          "publisher": "MicrosoftWindowsDesktop",
          "offer": "windows-10",
          "sku": "win10-21h2-avd-g2",
          "version": "latest"
        },
        "customize": [


          {
            "type": "PowerShell",
            "name": "OptimizeOS",
            "runElevated": true,
            "runAsSystem": true,
            "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/1_Optimize_OS_for_WVD.ps1"
          },
          {
            "type": "WindowsRestart",
            "restartCheckCommand": "write-host 'restarting post Optimizations'",
            "restartTimeout": "5m"
          },
          {
            "type": "PowerShell",
            "name": "Install Teams",
            "runElevated": true,
            "runAsSystem": true,
            "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/2_installTeams.ps1"
          },
          {
            "type": "PowerShell",
            "name": "Install 7-Zip",
            "runElevated": true,
            "runAsSystem": true,
            "scriptUri": "https://raw.githubusercontent.com/bigchrisatx/AVDCavLab/main/Install7ZipAVD.ps1"
          },
          {
            "type": "WindowsRestart",
            "restartCheckCommand": "write-host 'restarting post Teams Install'",
            "restartTimeout": "5m"
          },

          {
            "type": "WindowsUpdate",
            "searchCriteria": "IsInstalled=0",
            "filters": [
              "exclude:$_.Title -like '*Preview*'",
              "include:$true"
            ],
            "updateLimit": 40
          }

        ],
        "distribute": [
          {
            "type": "SharedImage",
            "galleryImageId": "/subscriptions/cf2e8aee-9844-4d85-aa8e-c31b7776b800/resourceGroups/MMSAIBAVDRSG/providers/Microsoft.Compute/galleries/MMSImageGallery/images/MMSwin10avd",
            "runOutputName": "sigOutput",
            "artifactTags": {
              "source": "wvd10",
              "baseosimg": "windows10"
            },
            "replicationRegions": [
              "eastus"

            ]
          }
        ]
      }
    }


  ]
}    








